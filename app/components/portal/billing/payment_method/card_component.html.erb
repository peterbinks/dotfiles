<div class="row">
  <div class="col-xs-12">
    <section class="card rounded-400 m-b-200" data-rspec="card-payment-block">
      <div class="container-fluid p-x-0">
        <div class="row">
          <div class="col-xs-6 col-md-6">
            <h3>Payment Method - Credit Card</h3>
          </div>
          <div class="col-xs-6 col-md-6 text--right">
            <%= link_to 'Update Credit Card', portal_routes.edit_policy_credit_card_path(policy_number), class: 'button button--link', data: { rspec: "card-payment-update-credit-card" } %>
          </div>
        </div>
        <div class="p-t-400">
          <p>Credit card ending in <span data-rspec="card-payment-last-four-digits"><%= last_four_digits %></span>, expires
          <span data-rspec="card-expiration-month"><%= expiration_month %></span>/<span data-rspec="card-expiration-year"><%= expiration_year %></span>.</p>
        </div>
      </div>
    </section>
  </div>
</div>

